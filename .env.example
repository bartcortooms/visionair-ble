# VisionAir BLE Reverse Engineering Environment Variables
# Copy to .env and fill in your values

# Device MAC address (format: 00:A0:50:XX:XX:XX)
VMI_MAC=

# ESPHome BLE Proxy (optional - for remote BLE access)
ESPHOME_PROXY_HOST=
ESPHOME_API_KEY=

# ADB target for phone control (optional - auto-detects if not set)
# Format: IP:PORT (e.g., 192.168.1.100:5555)
VMI_ADB_TARGET=

# Force screen resolution (optional - auto-detects via `adb shell wm size`)
# Supported: 1080x2340, 1116x2484
VMI_RESOLUTION=

# E2E Tests (used by pytest, see tests/conftest.py)
# Can also pass as CLI flags: --device-address, --proxy-host, --proxy-key
DEVICE_ADDRESS=
PROXY_HOST=
PROXY_KEY=
