# VisionAir BLE Environment Variables
# Copy to ../env and fill in your values (shared across all repos)

# VisionAir device MAC address (format: 00:A0:50:XX:XX:XX)
VISIONAIR_MAC=

# ESPHome BLE Proxy (for remote BLE access)
ESPHOME_PROXY_HOST=
ESPHOME_API_KEY=

# ADB target for phone control (optional - auto-detects if not set)
# Format: IP:PORT (e.g., 192.168.1.100:5555)
ADB_TARGET=

# Force screen resolution (optional - auto-detects via `adb shell wm size`)
# Supported: 1080x2340, 1116x2484
PHONE_RESOLUTION=
